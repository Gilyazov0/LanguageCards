  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "DJANGO DEBUG",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/LC/manage.py",
      "args": ["runserver"],
      "django": true
    },
    {
      "name": "Test Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/LC/manage.py",
      "args": ["test"],
      "django": true,
      "cwd": "${workspaceFolder}/LC"
    }
  ]
}
